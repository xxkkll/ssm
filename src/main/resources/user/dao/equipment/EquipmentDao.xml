    <insert id="addEquipment" parameterType="integer">
        insert into equpments_directory
        (
        state_blind,
        equipment_type,
        state_run,
        owner_id,
        create_time,
        blind_time,
        equipment_name,
        is_delet

        )
        values
        (
        1,
        #{equipment_type},
        1,
        #{owner_id},
        now(),
        )
    </insert>
    <select id="showDate" resultMap="baseMap" parameterType="com.lbyier.equipment.model.Equipment">
        select tem,hum
        from equpments
    </select>
    <select id="selectEquipment" parameterType="com.lbyier.equipment.model.Equipment" resultMap="baseMap">
        select id,state_blind,equipment_type,state_run,owner_id,create_time,blind_time,equipment_name
        from equpments_directory
        where equipment_name=#{equipment_name}
        and is_delet=1;

    </select>


</mapper>
